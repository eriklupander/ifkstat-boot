ENV_CFG="-Dspring.profiles.active={{ profiles }}"
JVM_CFG="-Xms1024m -Xmx1024m -XX:PermSize=128m -XX:MaxPermSize=512m -Dfile.encoding=UTF-8"
DEBUG_CFG="-XX:-HeapDumpOnOutOfMemoryError -XX:HeapDumpPath={{ ifkstat_tomcat_folder }}"
CREDENTIALS_CFG="-Dcredentials.file={{ config_etc_folder }}/credentials.properties"
IFKSTAT_CFG="-Difkstat.config.folder={{ config_etc_folder }} -Difkstat.config.file={{ config_etc_folder }}/ifkstat.properties -Difkstat.logback.file={{ config_etc_folder }}/ifkstat-logback.xml"
IFKSTAT_RESOURCES="-Difkstat.resources.folder={{ app_resources_folder }}"
LOGSENDER_CFG="-Dlogsender.config.folder={{ config_etc_folder }} -Dlogsender.config.file={{ config_etc_folder }}/logsender.properties -Dlogsender.logback.file={{ config_etc_folder }}/logsender-logback.xml"
export JAVA_OPTS="$JAVA_OPTS $ENV_CFG $JVM_CFG $DEBUG_CFG $CREDENTIALS_CFG $IFKSTAT_CFG $IFKSTAT_RESOURCES $LOGSENDER_CFG"
